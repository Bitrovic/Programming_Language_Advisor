<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/computing_platforms"
        android:layout_width="295dp"
        android:layout_height="54dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="136dp"
        android:entries="@array/computing_platforms"
        android:minHeight="48dp"
        android:popupBackground="@color/light_blue"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:fontFamily="@font/roboto_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/find_language"
        android:layout_width="297dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:onClick="onClickFindBeer"
        android:text="@string/find_language"
        android:textSize="15dp"
        app:backgroundTint="#0D47A1"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/computing_platforms"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/platforms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_language"
        android:textColor="@color/dark_blue"
        android:textSize="25dp"
        app:drawableTint="#0D47A1"
        app:fontFamily="@font/roboto_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find_language"
        app:layout_constraintVertical_bias="0.534"

        />
</androidx.constraintlayout.widget.ConstraintLayout>